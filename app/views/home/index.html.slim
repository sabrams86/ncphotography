header class="header" id="header"
	.ui.container
		h1.main-title Nick Coffey Photography
		h3.main-subtitle Capturing the purest of moments
		.center
			a class="center animated fadeInDown delay white" href="#Portfolio"
				i class="center fa fa-arrow-down fa-5x"

.ui.borderless.main.menu.fixed
	.ui.text.container
			a.item.center href="#header" Home
			a.item.center href="#Portfolio" Portfolio
			a.item.center href="#packages" Packages
			a.item.center href="#about" About
			a.item.center href="#contact" Contact

section class="main-section" id="Portfolio"
	.ui.container
		.row
			.ui.top.attached.tabular.menu
				- @albums.each do |album|
					button.item data-tab="#{album.name}"
						= album.name
			- @albums.each do |album|
				.ui.bottom.attached.tab.segment data-tab="#{album.name}"
					- album.photos.each do |photo|
						= image_tag(photo.image.thumb('180x180#').url, alt: photo.title, class: 'img-thumbnail', id: 'photo'+String(photo.id))

section class="main-section" id="packages"
	.ui.container
	h2 Wedding Packages
	h6 The following pre-determined packages are available for your convenience.  Please contact us for custom options.
	.row
		.col-lg-4.col-sm-6.fadeInLeft.delay
			.service-list
				.service-list-col1
					i class="fa-camera"
				.service-list-col2
					h3 Full Day Wedding
					p Two photographers, 1200 high resolution digital photographs, 8 hours
			.service-list
				.service-list-col1
					i class="fa-birthday-cake"
				.service-list-col2
					h3 Half Day Wedding
					p Two photographers, 800 high resolution digital photographs, 5 hours
			.service-list
				.service-list-col1
					i class="fa-cutlery"
				.service-list-col2
					h3 Full day Wedding (1 photographer)
					p One photographer, 800 high resolution digital photographs, 8 hours
			.service-list
				.service-list-col1
					i class="fa-photo"
				.service-list-col2
					h3 Half Day Wedding (1 photographer)
					p One photographer, 800 high resolution digital photographs, 8 hours
		figure class="col-lg-8 col-sm-6  text-right wow fadeInUp delay"
			- image_tag("WeddingPackage.jpg") 

