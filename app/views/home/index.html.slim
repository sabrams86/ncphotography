section class="main-section" id="Portfolio"
	.ui.container
		h2 Portfolio
		.row
			.ui.top.attached.tabular.menu.center
				- @albums.each do |album|
					- if (album.name == "Weddings")
						button.item.center.active data-tab="#{album.name}"
							= album.name
					- else
						button.item.center data-tab="#{album.name}"
							= album.name
			- @albums.each do |album|
				- if (album.name == "Weddings")
					.ui.bottom.attached.tab.segment.active data-tab="#{album.name}"
						- album.photos.each do |photo|
							= image_tag(photo.image.thumb('180x180#').url, alt: photo.title, class: 'img-thumbnail', id: 'photo'+String(photo.id))
				- else
					.ui.bottom.attached.tab.segment data-tab="#{album.name}"
						- album.photos.each do |photo|
							= image_tag(photo.image.thumb('180x180#').url, alt: photo.title, class: 'img-thumbnail', id: 'photo'+String(photo.id))

